<UserControl x:Class="AnnotationTool.Views.Image.ImagesAnnotationStudio"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="3*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <ContentControl Grid.Column="0" prism:RegionManager.RegionName="ControlsRegion"></ContentControl>
        <ContentControl Grid.Column="1" prism:RegionManager.RegionName="WorkspaceRegion"></ContentControl>
    </Grid>
</UserControl>
